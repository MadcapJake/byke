
require:
   checkit
   ../../config/db

provide:
   User, Users

class User < db.Model:
   table-name = .users

   rules = {
      email = { .required, .email }
      name  = { .required, .alpha-underscore}
   }

   initialize = -> this.on .saving: this.validate-save

   validate-save = -> checkit(this.rules).validate with this.attributes

class Users < db.Collection:
   model = User
